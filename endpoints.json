{
  "GET /api": {
    "description": "Serves a JSON representation of all available API endpoints."
  },
  "GET /api/topics": {
    "description": "Returns a list of available topics. Topic slugs can be used as the 'topic' query on GET /api/articles.",
    "exampleResponse": {
      "topics": [
        {
          "slug": "mitch",
          "description": "The man, the Mitch, the legend"
        },
        {
          "slug": "cats",
          "description": "Not dogs"
        },
        {
          "slug": "paper",
          "description": "what books are made of"
        }
      ]
    },
    "errors": []
  },
  "GET /api/users": {
    "description": "Returns a list of users.",
    "exampleResponse": {
      "users": [
        {
          "username": "lurker",
          "name": "do_nothing",
          "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
        }
      ]
    },
    "errors": []
  },
  "GET /api/articles": {
    "description": "Returns a list of articles. Supports filtering and sorting.",
    "queries": [
      {
        "sort_by": "Sorts by a valid column. Defaults to created_at. Valid: article_id, title, topic, author, created_at, votes, article_img_url, comment_count"
      },
      {
        "order": "asc or desc. Defaults to desc"
      },
      {
        "topic": "Filters by topic slug. If omitted, returns all articles"
      }
    ],
    "exampleRequest": "/api/articles?topic=mitch&sort_by=votes&order=asc",
    "exampleResponse": {
      "articles": [
        {
          "article_id": 3,
          "title": "Eight pug gifs that remind me of mitch",
          "topic": "mitch",
          "author": "icellusedkars",
          "created_at": "2020-11-03T09:12:00.000Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 2
        }
      ]
    },
    "errors": [
      {
        "status": 400,
        "msg": "invalid sort_by query"
      },
      {
        "status": 400,
        "msg": "invalid order query"
      },
      {
        "status": 404,
        "msg": "topic not found"
      }
    ]
  },
  "GET /api/articles/:article_id": {
    "description": "Returns a single article by id. Includes comment_count.",
    "queries": [],
    "exampleRequest": "/api/articles/1",
    "exampleResponse": {
      "article": {
        "author": "butter_bridge",
        "title": "Living in the shadow of a great man",
        "article_id": 1,
        "body": "I find this existence challenging",
        "topic": "mitch",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 11
      }
    },
    "errors": [
      {
        "status": 400,
        "msg": "bad request"
      },
      {
        "status": 404,
        "msg": "db record not found"
      }
    ]
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Returns comments for an article, most recent first.",
    "queries": [],
    "exampleRequest": "/api/articles/1/comments",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 16,
          "created_at": "2020-04-06T12:17:00.000Z",
          "author": "butter_bridge",
          "body": "I hate this song.",
          "article_id": 1
        }
      ]
    },
    "errors": [
      {
        "status": 400,
        "msg": "bad request"
      },
      {
        "status": 404,
        "msg": "db record not found"
      }
    ]
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Adds a comment to an article and returns the new comment.",
    "queries": [],
    "requestBody": {
      "schema": {
        "username": "string (required)",
        "body": "string (required)"
      },
      "example": {
        "username": "butter_bridge",
        "body": "I love this article!"
      }
    },
    "exampleRequest": "/api/articles/1/comments",
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "author": "butter_bridge",
        "body": "I love this article!",
        "article_id": 1,
        "votes": 0,
        "created_at": "2024-06-09T00:00:00.000Z"
      }
    },
    "errors": [
      {
        "status": 400,
        "msg": "missing required username or body fields"
      },
      {
        "status": 400,
        "msg": "bad request"
      },
      {
        "status": 404,
        "msg": "db record not found"
      }
    ]
  },
  "PATCH /api/articles/:article_id": {
    "description": "Increments or decrements the votes on an article.",
    "queries": [],
    "requestBody": {
      "schema": {
        "inc_votes": "number (required; can be negative)"
      },
      "example": {
        "inc_votes": 2
      }
    },
    "exampleRequest": "/api/articles/1",
    "exampleResponse": {
      "article": {
        "author": "butter_bridge",
        "title": "Living in the shadow of a great man",
        "article_id": 1,
        "body": "I find this existence challenging",
        "topic": "mitch",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 118,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    },
    "errors": [
      {
        "status": 400,
        "msg": "missing required field: inc_votes"
      },
      {
        "status": 400,
        "msg": "invalid inc_votes value"
      },
      {
        "status": 400,
        "msg": "bad request"
      },
      {
        "status": 404,
        "msg": "db record not found"
      }
    ]
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a comment by id. Responds with status 204 and no content.",
    "queries": [],
    "exampleRequest": "/api/comments/1",
    "exampleResponse": {},
    "errors": [
      {
        "status": 400,
        "msg": "bad request"
      },
      {
        "status": 404,
        "msg": "db record not found"
      }
    ]
  }
}
